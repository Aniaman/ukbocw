<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">

        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/margin_5" />
            <gradient
                android:angle="90"
                android:endColor="@color/text_action_blue"
                android:startColor="@color/text_action_blue"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="@color/text_action_blue" />

        </shape>
    </item>

    <item>


        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/margin_1"
                />
            <solid android:color="@color/color_text_four" />


        </shape>
    </item>

</selector>