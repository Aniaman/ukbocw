<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_family_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text=" Which Ration Card you hold?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_ration_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Ration Card"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_source_of_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="What are the other major sources of your family income?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_source_of_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Sources Of Your Family Income"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_family_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Total Monthly Family Income"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_family_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Total Monthly Family Income"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Where do you go for treatment?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_medical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Where do you go for treatment"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Do you possess any land?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_land_posses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Possess Any Land"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Where do you stay?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_stay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Where do you stay"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Material of the house?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_house_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Material of the house?"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text=" Is there any toilet in the house you live? "
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_any_washroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Have Toilet or Not"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Are you provided with basic amenities at The rented or employer provided house? "
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16"
                android:lineHeight="@dimen/dim_25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Have Basic Amenities"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>