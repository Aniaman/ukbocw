<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_15"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Name"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="Karan Singh"
                android:padding="@dimen/margin_12"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Gender"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Gender"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="District"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/et_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:ellipsize="end"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="District"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:padding="@dimen/margin_12"
                android:textColor="@color/black"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Age"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Age"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Area"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Area"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Material Status"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_marital_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Marital Status"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Mobile Number"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:ellipsize="end"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="987 987 9632"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/margin_12"
                android:textColor="@color/black"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Education"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Education"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Designation"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Designation"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/et_other_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:ellipsize="end"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="Designation"
                android:inputType="number"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="@dimen/margin_12"
                android:textColor="@color/black"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Which Social category do you belong?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_social_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Socail Category"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Religion"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Religion"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/et_other_religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:ellipsize="end"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="Religion"
                android:inputType="number"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="@dimen/margin_12"
                android:textColor="@color/black"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:text="Which State do you belong originally?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dim_16"
                android:layout_marginVertical="@dimen/dim_5"
                android:background="@color/background_grey"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select state"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/background_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/et_other_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:ellipsize="end"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="State"
                android:inputType="number"
                android:visibility="gone"
                android:maxLines="1"
                android:padding="@dimen/margin_12"
                android:textColor="@color/black"
                android:textColorHint="@color/color_text_four" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>