<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="How long have you been the member of UKBOCWW Board?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_number_of_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Years"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Have you faced any problem while registering or renewing the membership?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_registering_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Did you face any problem to produce 90 days working certificate?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_certificate_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Do you think that the number of days to acquire the working certificate should be reduced?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_certificate_reduce_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="How do you fill the forms?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_fill_the_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="How much does the CSC center charge you for application?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/et_application_charge_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_16"
                android:layout_marginTop="@dimen/text_10"
                android:layout_marginEnd="@dimen/dim_16"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/epilogue_regular_400"
                android:hint="100.00"
                android:padding="@dimen/margin_12"
                android:textColorHint="@color/color_text_four" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Do you renew your membership regularly?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_renew_membership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="If No, why?"
                android:visibility="gone"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/no_membership"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                android:visibility="gone"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_renew_membership_no_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Are you aware about the schemes of UKBOCWWB?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_scheme_aware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Have you ever informed about the scheme by the UKBOCWWB board?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_scheme_aware_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_20"
                android:fontFamily="@font/epilogue_medium_500"
                android:lineHeight="@dimen/text_25"
                android:text="Have you ever informed about the scheme by the UKBOCWWB board?"
                android:textColor="@color/secondary_title_color"
                android:textSize="@dimen/text_16" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/dim_16"
                fab:boxBackgroundColor="@color/white"
                fab:boxBackgroundMode="outline"
                fab:boxStrokeColor="@color/grey_button_text_color"
                fab:endIconTint="@color/black"
                fab:hintTextColor="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_scheme_aware_from_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Once"
                    android:inputType="none"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/color_text_four" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>